@using Lionk.TemperatureSensor


@code {

    [Parameter] public int Capacity { get; set; }
    [Parameter] public BaseTemperatureSensor? TopPartSensor { get; set; }
    [Parameter] public BaseTemperatureSensor? MiddlePartSensor { get; set; }
    [Parameter] public BaseTemperatureSensor? BottomPartSensor { get; set; }
    [Parameter] public double MaxTemp { get; set; }
    [Parameter] public double MinTemp { get; set; }

    private double _topTemp;
    private double _middleTemp;
    private double _bottomTemp;

    protected override void OnInitialized()
    {
        _topTemp = TopPartSensor?.GetTemperature() ?? 0;
        _middleTemp = MiddlePartSensor?.GetTemperature() ?? 0;
        _bottomTemp = BottomPartSensor?.GetTemperature() ?? 0;
    }

}
