@namespace Regulation.Components

@using MudBlazor

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6">Are you sure you want to reset the current count?</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Submit" Color="Color.Primary">Confirmer</MudButton>
        <MudButton OnClick="Cancel" Color="Color.Secondary">Annuler</MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!;

    private void Submit()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }
}
